 void box(int x1, int y1, int x2, int y2, int relleno, int color)
{
 int poly[8];

 poly[0]=x1;  poly[1]=y1;
 poly[2]=x2;  poly[3]=y1;
 poly[4]=x2;  poly[5]=y2;
 poly[6]=x1;  poly[7]=y2;
 setfillstyle(relleno,color);
 fillpoly(4,poly);
}

